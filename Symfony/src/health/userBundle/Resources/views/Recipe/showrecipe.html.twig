{%  extends 'healthuserBundle::layout.html.twig' %}

{% block head %}
{%block stylesheets %}

{% stylesheets '@healthuserBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link href="{{ asset_url  }}"  rel="stylesheet">
        <link href="{{ asset_url }}"  rel="stylesheet" >
        <link href="{{ asset_url }}"  rel="stylesheet" >
        <link href="{{ asset_url }}"  rel="stylesheet" >
        {% endstylesheets %}
<style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 600px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    </style>
{%endblock%}
{%endblock%}
{% block visual_heading %}


{% endblock %}

{% block main_content %}

    <section class="col-md-9 main_content">
<div class="container">

        <form class="form-signin" method ="POST"  data-validate="parsley">
            <h2 class="form-signin-heading">Update Recipe</h2>
            {% for recipes in recipe %}
            <input type="hidden" name="id" id="id" value="{{recipes.id}}"/>
            <label>Title</label>
            <input type="text" id="title" class="input-block-level" name="title" data-required="true"  value="{{recipes.title}}"><br />
            <label>Category</label>
            <input type="text" id="category" class="input-block-level" name="category" data-required="true" value="{{recipes.category}}"><br />
            <label>Ingredients</label>
            <input type="text" id="ingredients" class="input-block-level" name="ingredients" data-required="true" value="{{recipes.ingredients}}"><br />
            <label>Procedure</label>
            <input type="text" id="procedure" class="input-block-level" name="procedure" data-required="true" value="{{recipes.rProcedure}}"><br />
            <label>Image</label>
            <input type="text" id="image" class="input-block-level" name="image" data-required="true" value="{{recipes.image}}"><br />
             {% endfor %}
            <button class="btn btn-large btn-primary" type="submit" formaction="{{path('Recipe_updaterecipe')}}" >Update</button>
            <button class="btn btn-large btn-primary" type="submit" formaction="{{path('Recipe_deleterecipe')}}" >Delete</button>
            <button class="btn btn-large btn-primary" type="submit" formaction="{{path('Recipe_showrecipe')}}" >Cancel</button>
           
        </form>

    </div> 
    
    {% if name is defined%}
    <div class="alert-info fade in">
        <strong>{{name}}</strong>
    </div>
    {%endif%}  
    </section>
{% endblock %}

