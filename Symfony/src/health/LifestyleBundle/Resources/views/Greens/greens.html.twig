{%  extends 'healthhealthUserBundle::layout.html.twig' %}

{% block head %}

    {% block stylesheets %}
        {% stylesheets '@healthLifestyleBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link href="{{ asset_url  }}"  rel="stylesheet">
        <link href="{{ asset_url }}"  rel="stylesheet" >
        <link href="{{ asset_url }}"  rel="stylesheet" >
        <link href="{{ asset_url }}"  rel="stylesheet" >
        {% endstylesheets %}
    {% endblock %}

    {% block javascripts  %}
        <script src="{{ asset('bundles/healthlifestyle/js/jquery-1.11.1.js') }}"></script>
        <script src="{{ asset('bundles/healthlifestyle/js/jquery.liquid-slider.js') }}"></script>
        <script src="{{ asset('bundles/healthlifestyle/js/jquery.touchSwipe.js') }}"></script>
    {% endblock %}

{% endblock %}

{% block visual_heading %}


{% endblock %}

{% block main_content %}

    <section class="col-md-9 main_content">

        <h1>Green N Lean</h1>

        <section id="kale" class="col-md-4 green">
            <img src="{{ asset('bundles/healthhealthuser/images/kale.png') }}" alt="recipes" />
            {% for kale in greens %}
                <h2 class="title">{{ kale.green }}</h2>
                <p> {{ kale.gContent }}</p>

            {% endfor %}
        </section>

        <section id="spinach" class="col-md-4 green">
            <img src="{{ asset('bundles/healthhealthuser/images/spinach.png') }}" alt="recipes" />
            {% for spin in spinach %}
                <h2 class="title">{{ spin.green }}</h2>
                <p> {{ spin.gContent }}</p>

            {% endfor %}
        </section>

        <section id="collards" class="col-md-4 green">
            <img src="{{ asset('bundles/healthhealthuser/images/collards.png') }}" alt="recipes" />
            {% for coll in collards %}
                <h2 class="title">{{ coll.green }}</h2>
                <p> {{ coll.gContent }}</p>

            {% endfor %}
        </section>


            <p>What are you most deficient in?</p>
            <button id="I" value="iron">Iron</button>
            <button id="K" value="iron">Vitamin K</button>
            <button id="M" value="iron">Minerals</button>


<section class="row">
        <section class="helpful col-md-8">
            <h2 class="headers">Helpful Links</h2>

            {% for link in glink %}
            <span class="links">
                <a href="{{ link.webUrl }}" target="_blank">

                    {{ link.webName }}</a>
            </span>

            {% endfor %}
        </section>
    </section>



        <input type="button" class="btn allBtn" value="Back" onclick="goBack();" />

    </section><!-- end of content container-->
    <script>

        $(document).ready(function(){

            $('#collards').hide();
            $('#kale').hide();
            $('#spinach').hide();

            $('#K').click(function(){
               $('#kale').show(6000);
            });

            $('#I').click(function(){
                $('#collards').show(6000);
            });

            $('#M').click(function(){
                $('#spinach').show(6000);
            });
        });
    </script>
{% endblock %}